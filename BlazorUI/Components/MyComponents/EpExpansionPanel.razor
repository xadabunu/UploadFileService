<MudExpansionPanel IsInitiallyExpanded="true" Class="my-6">

	<TitleContent>
		<MudStack >
			<MudText Typo="Typo.h5">@TypeDocument.Libelle</MudText>
		</MudStack>
	</TitleContent>

	<ChildContent>

		<EpFormFile TypeDocument="@TypeDocument"/>

		@if (TypeDocument == TypeDocument.Projet)
		{
			<MudDivider Class="my-6" DividerType="DividerType.Middle"/>

			<MudText Typo="Typo.h6">@TypeDocument.AnnexeProjet.Libelle</MudText>

			<EpFormFile TypeDocument="@TypeDocument.AnnexeProjet"/>
		}
	</ChildContent>

</MudExpansionPanel>

@code {
	[Parameter] public TypeDocument TypeDocument { get; set; } = default!;
	[CascadingParameter] public int DemandeId { get; set; }
}